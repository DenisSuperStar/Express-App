{{> head}}
    <body class="page">
        <header class="page__header">
            {{> navbar}}
        </header>
        <main class="page__content">
            <aside class="page__sidebar">
                {{> sidebar}}
            </aside>
            <article class="page__body">
                {{{body}}}
            </article>
        </main>
        <div class="page__footer">
            {{> footer}}
        </div>
        <!-- 
            скрипт показа количества фалов, загружаем один файл, поэтому всегда показывает 1
            перенести в директорию public
         -->
        <script>
            const fields = Array.from(document.querySelectorAll('.is-input-file'));
            console.log(fields);
            fields.forEach((input) => {
                const label = input.nextElementSibling;
                const downBtnBox = document.querySelector('.is-bottom-btn-box');
                let labelVal = downBtnBox.querySelector('.is-selected').innerText;

                input.addEventListener('change', function() {
                    let countFiles = '';
                    if (this.files) countFiles = 1;
                    
                    if (countFiles) {
                        labelVal = 'Выбрано файлов: ' + countFiles;
                        downBtnBox.querySelector('.is-selected').innerText = labelVal;
                    } else {
                        downBtnBox.querySelector('.is-selected').innerText = 'Файл не выбран';
                    }
                });
            });
        </script>
        <!-- include jquery -->
        <script
            src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous">
        </script>
        <!-- jquery validation cdn was taking from: https://cdnjs.com/libraries/jquery-validate -->
        <!-- include jquery validation plugin -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
        <script src="/validation/validationForm.js"></script>
        <script src="/validation/validationAccountExist.js"></script>
    </body>
</html>